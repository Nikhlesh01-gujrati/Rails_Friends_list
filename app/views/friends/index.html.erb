<% if user_signed_in? %>
  <p id="notice"><%= notice %></p>
  <h1>Friends List</h1>
  <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <!-- <th>User Id</th> -->
          <th> </th>
        </tr>
      </thead>
      <tbody>
        <div id="friends">
          <% @friends.each do |friend| %>
            <% if friend.user == current_user %>
              <tr>
                <%= render friend %>
                <td><%= button_to 'Delete', friend_path(friend), method: :delete, data: { turbo_confirm: 'Are you sure?' }, 
              class: "btn btn-outline-danger btn-sm" %></td>
              </tr>
              <% end %>
            <% end %>
        </div>
      </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h2>Hello World</h2>
<% end %>
